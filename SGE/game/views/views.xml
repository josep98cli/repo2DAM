<odoo>
  <data>
    <!-- explicit list view definition -->
<!--VISTES JUGADOR-->

<record model="ir.ui.view" id="game.jugador_tree_list">
      <field name="name">Jugadores</field>
      <field name="model">game.jugador</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="ciutat"/>
        </tree>
      </field>
    </record>

     <record model="ir.ui.view" id="game.jugador_form_list">
      <field name="name">Jugadores</field>
      <field name="model">game.jugador</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
          <field name="ciutat"/>
        </form>
      </field>
    </record>

    <!-- VISTES CIUTAT -->
      <record model="ir.ui.view" id="game.ciutat_form_list">
      <field name="name">Ciutats</field>
      <field name="model">game.ciutat</field>
      <field name="arch" type="xml">
        <form>
          <field name="name" />
          <field name="vida"/>
          <field name="recursos"/>
          <field name="mines"/>
            <field name="image" widget="image"/>

        </form>
      </field>
    </record>

     <record model="ir.ui.view" id="game.ciutat_tree_list">
      <field name="name">Ciutats</field>
      <field name="model">game.ciutat</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name" string="Nom ciutats:"/>
          <field name="vida"/>
          <field name="recursos"/>
          <field name="mines"/>
          <field name="image" widget="image"/>
        </tree>
      </field>
    </record>

  <!--VISTES RECURS-->
    <record model="ir.ui.view" id="game.recurs_tree_list">
      <field name="name">Llista recurs</field>
      <field name="model">game.recurs</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="image" widget="image"/>
          <field name="cantidad"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="game.recurs_form_list">
      <field name="name">Recurs</field>
      <field name="model">game.recurs</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
          <field name="image" widget="image"/>
          <field name="cantidad"/>
        </form>
      </field>
    </record>
    <!-- VISTES RECURSOS -->
    <record model="ir.ui.view" id="game.recursos_form_list">
      <field name="name">Recursos</field>
      <field name="model">game.recursos</field>
      <field name="arch" type="xml">
        <form>
          <field name="recurs"/>
        </form>
      </field>
    </record>

     <record model="ir.ui.view" id="game.recursos_tree_list">
      <field name="name">Llista recursos</field>
      <field name="model">game.recursos</field>
      <field name="arch" type="xml">
        <tree>
          <field name="recurs"/>
        </tree>
      </field>
    </record>

    <!-- VISTES MINES-->
       <record model="ir.ui.view" id="game.mines_form_list">
      <field name="name">Mines</field>
      <field name="model">game.mines</field>
      <field name="arch" type="xml">
        <form>
          <field name="name"/>
        </form>
      </field>
    </record>

        <record model="ir.ui.view" id="game.mines_tree_list">
      <field name="name">Mines</field>
      <field name="model">game.mines</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

  <!-- VISTAS MINA -->
         <record model="ir.ui.view" id="game.mina_form_list">
      <field name="name">Mina</field>
      <field name="model">game.mina</field>
      <field name="arch" type="xml">
        <form>
            <field name="name"/>
            <field name="nivel"/>
            <field name="produccion"/>
            <field name="recurs"/>
        </form>
      </field>
    </record>
