<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/negro">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Carrito de la compra"
        android:textColor="@color/blanco"
        android:textSize="30dp"

        />

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="1dip"

        android:background="@color/blanco"
   />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_marginTop="35dp"
            android:text="Producto 1"
            android:textColor="@color/blanco"
            android:textSize="30dp"
            />

        <EditText
            android:id="@+id/editText"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_marginTop="30dp"
            android:background="@color/blanco"
            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="unidades"
            android:textColor="@color/blanco"
            android:textSize="26dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="3dp"
            />


    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/textviewProd2"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Producto 2"
        android:textColor="@color/blanco"
        android:textSize="30dp"
        android:layout_marginTop="35dp"/>
    <EditText
        android:id="@+id/editText2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:background="@color/blanco"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="unidades"
        android:textColor="@color/blanco"
        android:textSize="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="3dp"
        />

</LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/prod3"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:text="Producto 3"
        android:textColor="@color/blanco"
        android:textSize="30dp"
        android:layout_marginTop="35dp"/>
    <EditText
        android:id="@+id/editText3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginTop="30dp"
        android:background="@color/blanco"
        />

    <TextView
        android:layout_width="120dp"
        android:layout_height="30dp"
        android:text="unidades"
        android:textColor="@color/blanco"
        android:textSize="26dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="3dp"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:text="Enviar por correo electronico"/>
    </LinearLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="wrap_content"
        android:layout_height="1dip"

        android:background="@color/blanco"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Importe"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            />

      <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="000.00€"
            android:textColor="@color/blanco"
            android:gravity="right"
            android:textSize="20dp"
                />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="I.V.A"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="00.00€"
            android:textColor="@color/blanco"
            android:gravity="right"
            android:textSize="20dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Total"
            android:textSize="20dp"
            android:textColor="@color/blanco"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="0000.00€"
            android:textColor="@color/blanco"
            android:gravity="right"
            android:textSize="20dp"
            />
    </LinearLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="wrap_content"
        android:layout_height="1dip"
        android:background="@color/blanco"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Confirmar"

            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Rechazar"/>
    </LinearLayout>
</LinearLayout>