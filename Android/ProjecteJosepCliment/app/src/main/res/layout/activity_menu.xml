<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/fondo_menu"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_row="0"
        android:layout_column="0"
        android:text="Aplicaciones"
        android:textSize="40dp"
        android:textColor="@color/blanco"
        android:background="@color/naranja_titulo"
        android:textAlignment="center"

        />
    <TextView
        android:id="@+id/editTextUsuario"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_row="1"
        android:layout_column="0"
        android:background="@drawable/button_menu"
        android:textColor="@color/blanco"
        android:textStyle="italic"
        android:layout_marginTop="100dp"
        />

    <Button
        android:id="@+id/buttonContactos"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_row="2"
        android:layout_column="0"
        android:text="Contactos"
        android:background="@drawable/button_menu"
        android:textColor="@color/blanco"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:drawableLeft="@android:drawable/ic_menu_agenda"
        />
    <Button
        android:id="@+id/buttonCalculadora"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_row="3"
        android:layout_column="0"
        android:text="Calculadora"
        android:background="@drawable/button_menu"
        android:textColor="@color/blanco"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:drawableLeft="@drawable/calculadora_imagen"
        />
    <Button
        android:id="@+id/buttonInf"
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:layout_row="4"
        android:layout_column="0"
        android:text="Acerca de"
        android:background="@drawable/button_menu"
        android:textColor="@color/blanco"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        android:drawableLeft="@android:drawable/ic_menu_info_details"
        />


</GridLayout>